<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:fitsSystemWindows="true"
    android:layout_height="match_parent">

    <include
        android:id="@+id/select"
        layout="@layout/admin_appbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/select"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/background">

                <TextView
                    android:id="@+id/shopname"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="30dp"
                    android:text="Outlet Name:"
                    android:textColor="@android:color/black"
                    android:textSize="18sp" />

                <Spinner
                    android:id="@+id/shopDrop"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="20dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="20dp"
                    android:layout_toEndOf="@+id/shopname"
                    android:background="@android:drawable/btn_dropdown" />

                <TextView
                    android:id="@+id/material"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="20dp"
                    android:layout_below="@id/shopDrop"
                    android:text="Material:"
                    android:textColor="@android:color/black"
                    android:textSize="18sp" />

                <Spinner
                    android:id="@+id/materialDrop"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="20dp"
                    android:layout_marginStart="10dp"
                    android:layout_below="@+id/shopDrop"
                    android:layout_marginTop="10dp"
                    android:layout_toEndOf="@+id/material"
                    android:background="@android:drawable/btn_dropdown" />


                <TextView
                    android:id="@+id/DesignNew"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/materialDrop"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="35dp"
                    android:text="Design New:"
                    android:textColor="@android:color/black"
                    android:textSize="18sp" />


                <android.support.design.widget.TextInputLayout
                    android:id="@+id/fillDesignNew"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/materialDrop"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginTop="10dp"
                    android:layout_toRightOf="@+id/DesignNew">

                    <android.support.design.widget.TextInputEditText
                        android:id="@+id/textDesignNew"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:ems="10"
                        android:maxLines="1"
                        android:padding="15dp"
                        android:textAlignment="center" />
                </android.support.design.widget.TextInputLayout>

                <TextView
                    android:id="@+id/DesignOld"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/fillDesignNew"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="35dp"
                    android:text="Design Old:"
                    android:textColor="@android:color/black"
                    android:textSize="18sp" />


                <android.support.design.widget.TextInputLayout
                    android:id="@+id/fillDesignOld"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/fillDesignNew"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginTop="10dp"
                    android:layout_toRightOf="@+id/DesignOld">

                    <android.support.design.widget.TextInputEditText
                        android:id="@+id/textDesignOld"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:ems="10"
                        android:maxLines="1"
                        android:padding="15dp"
                        android:textAlignment="center" />
                </android.support.design.widget.TextInputLayout>


                <TextView
                    android:id="@+id/size"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/fillDesignOld"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="30dp"
                    android:text="Size:"
                    android:textColor="@android:color/black"
                    android:textSize="18sp" />

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/layoutwidth"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/fillDesignOld"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginTop="10dp"
                    android:layout_toRightOf="@+id/size"
                    android:hint="Width"
                    android:textAlignment="center">

                    <android.support.design.widget.TextInputEditText
                        android:id="@+id/editTextWidth"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="number"
                        android:textAlignment="center" />
                </android.support.design.widget.TextInputLayout>

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/layoutheight"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/fillDesignOld"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginTop="10dp"
                    android:layout_toRightOf="@+id/layoutwidth"
                    android:hint="Height"
                    android:textAlignment="center">


                    <android.support.design.widget.TextInputEditText
                        android:id="@+id/editTextHeight"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="number"
                        android:textAlignment="center" />
                </android.support.design.widget.TextInputLayout>

                <TextView
                    android:id="@+id/quantity"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/layoutwidth"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="30dp"
                    android:text="Quantity:"
                    android:textColor="@android:color/black"
                    android:textSize="18sp" />

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/qty"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/layoutwidth"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginTop="10dp"
                    android:layout_toRightOf="@+id/quantity"
                    android:hint="Qty"
                    android:textAlignment="center">

                    <android.support.design.widget.TextInputEditText
                        android:id="@+id/textqty"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="number"
                        android:textAlignment="center" />
                </android.support.design.widget.TextInputLayout>

                <TextView
                    android:id="@+id/brand"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/qty"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="20dp"
                    android:text="Brand"
                    android:textColor="@android:color/black"
                    android:textSize="18sp" />

                <Spinner
                    android:id="@+id/brandDrop"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/qty"
                    android:layout_marginEnd="20dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_toEndOf="@+id/brand"
                    android:background="@android:drawable/btn_dropdown" />


                <TextView
                    android:id="@+id/Date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/brandDrop"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="35dp"
                    android:text="Date of Order:"
                    android:textColor="@android:color/black"
                    android:textSize="18sp" />


                <android.support.design.widget.TextInputLayout
                    android:id="@+id/date"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/brandDrop"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginTop="10dp"
                    android:layout_toRightOf="@+id/Date">

                    <android.support.design.widget.TextInputEditText
                        android:id="@+id/textDate"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:ems="10"
                        android:hint="YYYY-MM-DD"
                        android:maxLines="1"
                        android:padding="15dp"
                        android:textAlignment="center" />
                </android.support.design.widget.TextInputLayout>
                <TextView
                    android:id="@+id/remarks"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/date"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="15dp"
                    android:text="Remarks:"
                    android:textColor="@android:color/black"
                    android:textSize="18sp" />

                <EditText
                    android:id="@+id/remarksText"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:layout_below="@+id/date"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="25dp"
                    android:layout_marginTop="10dp"
                    android:layout_toRightOf="@+id/quantity"
                    android:background="#E8EAF6"
                    android:gravity="center" />

                <Button
                    android:id="@+id/order"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/remarksText"
                    android:layout_centerHorizontal="true"
                    android:layout_margin="20dp"
                    android:background="@android:drawable/btn_default"
                    android:text="order" />

            </RelativeLayout>
        </LinearLayout>
    </ScrollView>
</RelativeLayout>
