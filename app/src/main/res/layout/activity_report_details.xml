<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true">

    <android.support.design.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context="com.example.android.gurkha.Person_Details">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/blueish_gray"
                android:orientation="vertical">

                <include
                    android:id="@+id/select"
                    layout="@layout/admin_appbar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true" />

                <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
                    android:id="@+id/card_view_name"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_below="@+id/select"
                    android:layout_gravity="center"
                    android:layout_marginBottom="15dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:layout_marginTop="15dp"
                    android:elevation="16dp"
                    android:background="@color/cardview_light_background"
                    card_view:cardCornerRadius="3dp"
                    card_view:cardUseCompatPadding="true">


                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:padding="5dp">

                        <TextView
                            android:id="@+id/brand"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/textParticulars"
                            android:layout_marginStart="30dp"
                            android:layout_marginTop="30dp"
                            android:text="Brand"
                            android:textSize="16sp" />

                        <TextView
                            android:id="@+id/textBrand"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/brand"
                            android:layout_marginStart="30dp"
                            android:text="asdgag"
                            android:textColor="@android:color/black"
                            android:textSize="20sp" />

                        <View
                            android:id="@+id/lining3"
                            android:layout_width="match_parent"
                            android:layout_height="2dp"
                            android:layout_marginStart="30dp"
                            android:layout_marginEnd="30dp"
                            android:layout_marginTop="10dp"
                            android:layout_below="@+id/textBrand"
                            android:background="@drawable/lining" />


                        <TextView
                            android:id="@+id/height"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/textBrand"
                            android:layout_marginStart="30dp"
                            android:layout_marginTop="30dp"
                            android:text="Height"
                            android:textSize="16sp" />

                        <TextView
                            android:id="@+id/textHeight"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/height"
                            android:layout_marginStart="30dp"
                            android:text="asdgag"
                            android:textColor="@android:color/black"
                            android:textSize="20sp" />

                        <View
                            android:id="@+id/lining4"
                            android:layout_width="match_parent"
                            android:layout_height="2dp"
                            android:layout_marginStart="30dp"
                            android:layout_marginEnd="30dp"
                            android:layout_marginTop="10dp"
                            android:layout_below="@+id/textHeight"
                            android:background="@drawable/lining" />

                        <TextView
                            android:id="@+id/width"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/textHeight"
                            android:layout_marginStart="30dp"
                            android:layout_marginTop="30dp"
                            android:text="Width"
                            android:textSize="16sp" />

                        <TextView
                            android:id="@+id/textWidth"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/width"
                            android:layout_marginStart="30dp"
                            android:text="asdgag"
                            android:textColor="@android:color/black"
                            android:textSize="20sp" />

                        <View
                            android:id="@+id/linin5"
                            android:layout_width="match_parent"
                            android:layout_height="2dp"
                            android:layout_marginStart="30dp"
                            android:layout_marginEnd="30dp"
                            android:layout_marginTop="10dp"
                            android:layout_below="@+id/textWidth"
                            android:background="@drawable/lining" />

                        <TextView
                            android:id="@+id/qty"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/textWidth"
                            android:layout_marginStart="30dp"
                            android:layout_marginTop="30dp"
                            android:text="Quantity"
                            android:textSize="16sp" />

                        <TextView
                            android:id="@+id/textQty"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/qty"
                            android:layout_marginStart="30dp"
                            android:text="asdag"
                            android:textColor="@android:color/black"
                            android:textSize="20sp" />

                        <View
                            android:id="@+id/lining6"
                            android:layout_width="match_parent"
                            android:layout_height="2dp"
                            android:layout_marginStart="30dp"
                            android:layout_marginEnd="30dp"
                            android:layout_marginTop="10dp"
                            android:layout_below="@+id/textQty"
                            android:background="@drawable/lining" />

                        <TextView
                            android:id="@+id/particulars"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="30dp"
                            android:layout_marginTop="30dp"
                            android:text="Particulars"
                            android:textSize="16sp" />

                        <TextView
                            android:id="@+id/textParticulars"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/particulars"
                            android:layout_marginStart="30dp"
                            android:text="asdgag"
                            android:textColor="@android:color/black"
                            android:textSize="20sp" />

                        <View
                            android:id="@+id/lining1"
                            android:layout_width="match_parent"
                            android:layout_height="2dp"
                            android:layout_marginStart="30dp"
                            android:layout_marginEnd="30dp"
                            android:layout_marginTop="10dp"
                            android:layout_below="@+id/textParticulars"
                            android:background="@drawable/lining" />

                        <RelativeLayout
                            android:id="@+id/beforeImageContainer"
                            android:layout_width="wrap_content"
                            android:layout_below="@+id/textQty"
                            android:layout_marginStart="30dp"
                            android:layout_marginTop="30dp"
                            android:layout_height="wrap_content">

                            <TextView
                                android:id="@+id/beforeVisit"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:padding="5dp"
                                android:text="Before Visit"
                                android:textSize="16sp" />

                            <ImageView
                                android:id="@+id/imageBeforeVisit"
                                android:layout_width="150dp"
                                android:layout_height="150dp"
                               android:layout_below="@+id/beforeVisit"
                                android:padding="5dp"
                                android:textColor="@android:color/black"
                                android:textSize="20sp" />

                        </RelativeLayout>

                        <View
                            android:id="@+id/lini"
                            android:layout_width="match_parent"
                            android:layout_height="2dp"
                            android:layout_marginStart="30dp"
                            android:layout_marginEnd="30dp"
                            android:layout_marginTop="15dp"
                            android:layout_below="@+id/beforeImageContainer"
                            android:background="@drawable/lining" />

                        <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/afterVisitContainer"
                            android:layout_marginTop="30dp"
                            android:layout_marginStart="30dp"
                            android:layout_below="@+id/beforeImageContainer">

                            <TextView
                                android:id="@+id/afterVisit"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:padding="5dp"
                                android:text="After Visit"
                                android:textSize="16sp" />

                            <ImageView
                                android:id="@+id/imageAfterVisit"
                                android:layout_width="150dp"
                                android:layout_height="150dp"
                                android:layout_below="@id/afterVisit"
                                android:padding="5dp"
                                android:textColor="@android:color/black"
                                android:textSize="20sp" />
                        </RelativeLayout>

                        <View
                            android:id="@+id/lining0"
                            android:layout_width="match_parent"
                            android:layout_height="2dp"
                            android:layout_marginStart="30dp"
                            android:layout_marginBottom="30dp"
                            android:layout_marginEnd="30dp"
                            android:layout_marginTop="15dp"
                            android:layout_below="@+id/afterVisitContainer"
                            android:background="@drawable/lining" />


                    </RelativeLayout>

                </android.support.v7.widget.CardView>
            </LinearLayout>
        </ScrollView>
    </android.support.design.widget.CoordinatorLayout>

</android.support.v4.widget.DrawerLayout>