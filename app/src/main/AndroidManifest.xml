<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.android.retailmapping">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:name=".app.AppController"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".LoginActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".FieldTeamForm"
            android:label="Field team form"
            android:windowSoftInputMode="stateHidden" />
        <activity
            android:name=".MainActivity"
            android:windowSoftInputMode="stateHidden|adjustResize" />
        <activity
            android:name=".AddShop"
            android:label="Add Shop"
            android:windowSoftInputMode="stateHidden" />
        <activity
            android:name=".FurnitureRequestForm"
            android:label="Furniture Form"
            android:windowSoftInputMode="stateHidden|adjustResize" />
        <activity
            android:name=".RegisterActivity"
            android:label="Registration" />
        <activity
            android:name=".MaterialRequestForm"
            android:label="Material Form"
            android:windowSoftInputMode="stateHidden|adjustResize" />
        <activity
            android:name=".ShopDetails"
            android:label="Shop Details" />
        <activity
            android:name=".FurnitureRequest"
            android:label="Furniture Request"
            android:windowSoftInputMode="stateHidden" />
        <activity android:name=".FurnitureDetails" />
        <activity android:name=".MaterialDetails" />
        <activity
            android:name=".MaterialRequest"
            android:label="Material Request"
            android:windowSoftInputMode="stateHidden" />
        <activity
            android:name=".Profile"
            android:label="" />
        <activity
            android:name=".InShop"
            android:label="Inshop" />
        <activity
            android:name=".OnShop"
            android:label="On Shop" />
        <activity
            android:name=".FieldTeamActivity"
            android:label="Field Team"
            android:windowSoftInputMode="stateHidden" />
        <activity
            android:name=".FieldTeamDetails"
            android:label="Details" />
        <activity
            android:name=".AfterImage"
            android:label="Set After Image" />
        <activity
            android:name=".CommentDetails"
            android:label="Comments" />
        <activity android:name=".Report" />
        <activity android:name=".ReportDetails" />
        <activity android:name=".ClientActivity" />
        <activity
            android:name=".CreateUser"
            android:label="Create User"
            android:windowSoftInputMode="stateHidden" />
    </application>

</manifest>